.container-fluid
  .row.rows-cols-2.justify-content-center.flex-column-reverse.flex-md-row
    .col.text-left.border-right
      .row.rows-cols-2.justify-content-left.flex-column-reverse.flex-md-row
      %br
        %h5 
          %strong Admin permissions
        %p.mod-info Demote/promote users administrator privileges
      .row.justify-content-left.flex-column-reverse.flex-md-row.mr-2
        %table.table.table-bordered
          %thead.thead-light
            %tr
              %th.text-center{scope: "col"} Username
              %th.text-center{scope: "col"} Name
              %th.text-center{scope: "col"} 
          %tbody#admins{style: 'max-height: 250px'}
            = render partial: 'user_row', collection: @admins, as: :admin
      .row.justify-content-left.flex-column-reverse.flex-md-row.mb-4
        = link_to promote_user_path, class: 'ajax-modal btn btn-sm btn-secondary' do
          Add a new admin
    .col.text-left
      .row.justify-content-left.flex-column-reverse.flex-md-row
      %br
        %h5 
          %strong Send an email...
        %p.mod-info Send a message to all users of the site via email
      .row.justify-content-center.flex-column-reverse.flex-md-row.ml-2
        = render 'email_form'
  .row.justify-content-left.flex-column-reverse.flex-md-row
    %br
      %h5 
        %strong Banned words
  
  #word-form.row.justify-content-left.flex-column-reverse.flex-md-row.ml-2.mr-2
    = render 'banned_words_form'

  .row.justify-content-elft.flex-column-reverse.flex-md-row
    %br
      %h5 
        %strong Edit the site...
  %br
  .row.justify-content-elft.flex-column-reverse.flex-md-row
    %p COVID Guidance
  
  #covid-form.row.justify-content-left.flex-column-reverse.flex-md-row.ml-2.mr-2
    = render 'covid_form'
  
  .row.justify-content-elft.flex-column-reverse.flex-md-row
    %p FAQs
  
  .row.justify-content-left.flex-column-reverse.flex-md-row.ml-2.mr-2
    %table.table.table-bordered
      %thead.thead-light
        %tr
          %th.text-center{scope: "col"} Question
          %th.text-center{scope: "col"} Answer
          %th.text-center{scope: "col"} 
      %tbody#questions{style: 'max-height: 400px'}
        = render partial: 'faq_row', collection: @questions, as: :question
  .row.justify-content-center.flex-column-reverse.flex-md-row
    = link_to add_question_path, class: 'ajax-modal btn btn-md btn-primary' do
      Add a new question
