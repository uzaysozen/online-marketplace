#admin-form.w-100
  = simple_form_for(:covid_guidance, url: other_path, remote: true) do |f|
    = f.error_notification

    .form-inputs
      = f.input :content, label: false, as: :text, input_html: { rows: 4, value: @covid_message}
    .form-actions.row
      = f.button :button, class: 'btn-primary col-6 offset-3 col-lg-4 offset-lg-4' do
        Save changes