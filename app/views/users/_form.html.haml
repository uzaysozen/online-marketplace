= simple_form_for(:settings, url: settings_path) do |f|
  = f.error_notification

  .text-medium.text-black.pl-2
    = check_box_tag(:email, "message")
    = label_tag(:email_message, "When I receive a message")
  .text-medium.text-black.pl-2
    = check_box_tag(:email, "category")
    = label_tag(:email_category, "When an item from this category is posted")
  .col-12.col-md-11
    .text-medium.text-black.pl-3.pt-2
      %p= select_tag(:when,options_for_select([["All", 1],["Custom", 2]]),:class => 'w-100')

  When?
  .col-12.col-md-12
    .text-small.pb-4.pl-3.w-100
      = radio_button_tag(:when, "immediately")
      = label_tag(:when_immediately, "Immediately", :class => 'pr-5')
      = radio_button_tag(:when, "weekly")
      = label_tag(:when_weekly, "Weekly", :class => 'pr-5')
      = radio_button_tag(:when, "Monthly")
      = label_tag(:when_monthly, "Monthly")
 
    
  .form-actions.text-center
    = f.button :button, class: 'btn-huge listing-red text-red pl-5 pr-5 pt-2 pb-2' do
      Save