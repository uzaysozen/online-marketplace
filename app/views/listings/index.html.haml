.panel.panel-default
  .panel-heading
    %h3.panel-title Listings
  .panel-body
    - if @listings.size == 0
      %p No listings were found
    - else
      %p There are #{@listings.size} listings available.
    

  .row.m-0
    .col-3
      = link_to "Sort By Title", '/listings?sort=title', sort: "title"
      \|
      = link_to "Sort By Price", '/listings?sort=price', sort: "price"
      
      = render partial: 'search_and_filter_menu'
    
    .col-8.offset-1
      #listings
        = render partial: 'listing', collection: @listings
