- @listings.each do |listing|
  - user_favourite = current_user.user_favourites.find_by(listing: listing)
  %tr
    %td= listing.title
    %td= listing.description
    %td= listing.price
    %td= listing.creator_id
    %td= listing.receiver_id
    %td= listing.listing_category.name
    %td= listing.listing_condition.name
    %td= listing.listing_status.name
    %td= link_to 'Enquire', start_conversation_listing_path(listing)
    - if listing.creator != current_user
      - if user_favourite.present?
        %td
          = link_to(delete_favourite_listing_path(listing), method: :post, remote: true) do
            = icon 'fas', 'heart'
      - else
        %td
          = link_to(add_favourite_listing_path(listing), method: :post, remote: true) do
            = icon 'far', 'heart'

