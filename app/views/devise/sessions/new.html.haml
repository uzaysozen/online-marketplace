- content_for :title, 'Log In'

.row.justify-content-center.px-5
  .col-12.col-md-8
    .border-gray.rounded.h-100
      .row.p-4
        .col-12.col-sm-6
          .text-large.text-blue.font-weight-bold
            Sheffield
            %br
            University
            %br
            Marketplace
          .text-medium.text-darkgray
            The official sell and swap page of The University Of Sheffield
        .col-12.col-sm-6.text-huge.text-red.text-center
          = icon('fas', 'store')

  .col-12.col-md-4
    .card.card-light
      = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .card-header
          Log In
        .card-body
          = f.input :username, autofocus: true, required: true
          = f.input :password, required: true
        .card-footer
          = submit_button 'Log in'
          .mt-3= render "devise/shared/links"

